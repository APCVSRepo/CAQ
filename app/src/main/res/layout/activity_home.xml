<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ford.cvs.caq.client.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/home_main"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/menu_panel_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/real_time_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_menu_bg"
            android:button="@null"
            android:paddingTop="7dp"
            android:drawableTop="@mipmap/menu_real_time_icon"
            android:gravity="center"
            android:text="实时"
            android:textColor="@color/bottom_menu_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/history_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_menu_bg"
            android:button="@null"
            android:drawableTop="@mipmap/menu_history_icon"
            android:paddingTop="7dp"
            android:gravity="center"
            android:text="历史"
            android:textColor="@color/bottom_menu_text_color"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/filter_screen_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_menu_bg"
            android:button="@null"
            android:drawableTop="@mipmap/menu_filter_screen_icon"
            android:paddingTop="7dp"
            android:gravity="center"
            android:text="滤网"
            android:textColor="@color/bottom_menu_text_color"
            android:textSize="12sp" />
    </RadioGroup>

</LinearLayout>
