<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/date_selected" />
            <corners android:topLeftRadius="@dimen/date_radius" android:bottomLeftRadius="@dimen/date_radius"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/date_not_selected" />
            <corners android:topLeftRadius="@dimen/date_radius" android:bottomLeftRadius="@dimen/date_radius"/>
        </shape>
    </item>
</selector>